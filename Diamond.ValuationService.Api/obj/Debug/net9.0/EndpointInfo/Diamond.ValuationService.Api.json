{
  "openapi": "3.0.4",
  "info": {
    "title": "Diamond.ValuationService.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Cases": {
      "post": {
        "tags": [
          "Cases"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCaseRequestDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateCaseResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Cases/{id}": {
      "get": {
        "tags": [
          "Cases"
        ],
        "operationId": "GetCaseById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Cases/{id}/status": {
      "patch": {
        "tags": [
          "Cases"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateCaseStatusDto"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Valuations/estimate": {
      "post": {
        "tags": [
          "Valuations"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EstimateRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/EstimateRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/EstimateRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/EstimateResponseDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EstimateResponseDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/EstimateResponseDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateCaseRequestDto": {
        "required": [
          "clarity",
          "color",
          "cut",
          "email",
          "fluorescence",
          "fullName",
          "origin",
          "phone",
          "polish",
          "preferredContactMethod",
          "shape",
          "symmetry"
        ],
        "type": "object",
        "properties": {
          "fullName": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string",
            "format": "email"
          },
          "phone": {
            "maxLength": 30,
            "minLength": 0,
            "type": "string",
            "format": "tel"
          },
          "preferredContactMethod": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "certificateNo": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "origin": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "shape": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "carat": {
            "maximum": 1000,
            "minimum": 0.001,
            "type": "number",
            "format": "double"
          },
          "color": {
            "maxLength": 10,
            "minLength": 0,
            "type": "string"
          },
          "clarity": {
            "maxLength": 10,
            "minLength": 0,
            "type": "string"
          },
          "cut": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          },
          "polish": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          },
          "symmetry": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          },
          "fluorescence": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "CreateCaseResponseDto": {
        "type": "object",
        "properties": {
          "caseId": {
            "type": "string",
            "format": "uuid"
          },
          "status": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "EstimateRequestDto": {
        "type": "object",
        "properties": {
          "certificateNo": {
            "type": "string",
            "nullable": true
          },
          "origin": {
            "type": "string",
            "nullable": true
          },
          "shape": {
            "type": "string",
            "nullable": true
          },
          "carat": {
            "type": "number",
            "format": "double"
          },
          "color": {
            "type": "string",
            "nullable": true
          },
          "clarity": {
            "type": "string",
            "nullable": true
          },
          "cut": {
            "type": "string",
            "nullable": true
          },
          "polish": {
            "type": "string",
            "nullable": true
          },
          "symmetry": {
            "type": "string",
            "nullable": true
          },
          "fluorescence": {
            "type": "string",
            "nullable": true
          },
          "tablePercent": {
            "type": "number",
            "format": "double"
          },
          "depthPercent": {
            "type": "number",
            "format": "double"
          },
          "measurements": {
            "type": "string",
            "nullable": true
          },
          "externalRequestId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "customerName": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "EstimateResponseDto": {
        "type": "object",
        "properties": {
          "requestId": {
            "type": "string",
            "format": "uuid"
          },
          "resultId": {
            "type": "string",
            "format": "uuid"
          },
          "pricePerCarat": {
            "type": "number",
            "format": "double"
          },
          "totalPrice": {
            "type": "number",
            "format": "double"
          },
          "currency": {
            "type": "string",
            "nullable": true
          },
          "algorithmVersion": {
            "type": "string",
            "nullable": true
          },
          "valuatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "UpdateCaseStatusDto": {
        "required": [
          "status"
        ],
        "type": "object",
        "properties": {
          "status": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ValidationProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          },
          "errors": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "nullable": true
          }
        },
        "additionalProperties": { }
      }
    }
  }
}