{
  "ReverseProxy": {
    "Routes": {
      "user": {
        "ClusterId": "user",
        "Match": { "Path": "/api/user/{**catchall}" }
      },
      "auth": {
        "ClusterId": "user",
        "Match": { "Path": "/api/auth/{**catchall}" }
      },
      "catalog": {
        "ClusterId": "catalog",
        "Match": { "Path": "/api/catalog/{**catchall}" }
      },
      "product": {
        "ClusterId": "catalog",
        "Match": { "Path": "/api/product/{**catchall}" }
      },
      "inventory": {
        "ClusterId": "inventory",
        "Match": { "Path": "/api/inventory/{**catchall}" }
      },
      "orders": {
        "ClusterId": "orders",
        "Match": { "Path": "/api/orders/{**catchall}" }
      },
      "payments": {
        "ClusterId": "payments",
        "Match": { "Path": "/api/payments/{**catchall}" }
      },
      "pricing": {
        "ClusterId": "pricing",
        "Match": { "Path": "/api/pricing/{**catchall}" }
      },

      "valuation-cases": {
        "ClusterId": "valuation-request",
        "Match": { "Path": "/api/cases/{**catchall}" }
      },

      "valuation-estimate": {
        "ClusterId": "valuation-request",
        "Match": { "Path": "/api/valuations/{**catchall}" }
      },

      "valuation-response": {
        "ClusterId": "valuation-response",
        "Match": { "Path": "/api/response/{**catchall}" }
      },
      "invoice": {
        "ClusterId": "invoice",
        "Match": { "Path": "/api/receipts/{**catchall}" }
      }
    },

    "Clusters": {
      "user": { "Destinations": { "d1": { "Address": "http://user-api:8080" } } },
      "catalog": { "Destinations": { "d1": { "Address": "http://product-api:8080" } } },
      "inventory": { "Destinations": { "d1": { "Address": "http://inventory-api:8080" } } },
      "orders": { "Destinations": { "d1": { "Address": "http://order-api:8080" } } },
      "payments": { "Destinations": { "d1": { "Address": "http://payment-api:8080" } } },
      "pricing": { "Destinations": { "d1": { "Address": "http://pricing-api:8080" } } },
      "valuation-request": { "Destinations": { "d1": { "Address": "http://valuation-request-api:8080" } } },
      "valuation-response": { "Destinations": { "d1": { "Address": "http://valuation-response-api:8080" } } },
      "invoice": { "Destinations": { "d1": { "Address": "http://invoice-api:8080" } } }
    }
  },

  "Integrations": {
    "User": { "BaseUrl": "http://user-api:8080" },
    "Order": { "BaseUrl": "http://order-api:8080" },
    "Product": { "BaseUrl": "http://product-api:8080" },
    "Payment": { "BaseUrl": "http://payment-api:8080" },
    "Valuation": { "BaseUrl": "http://valuation-request-api:8080" },

    "ValuationRequest": { "BaseUrl": "http://valuation-request-api:8080" },
    "ValuationResponse": { "BaseUrl": "http://valuation-response-api:8080" }
  },

  "Jwt": {
    "Issuer": "diamond.local",
    "Audience": "diamond.clients",
    "SecretKey": "SuperSecretKeyChangeMe_AtLeast32Chars",
    "ExpiryMinutes": 20
  }
}
